{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "data": {
      "url": "data/volcano.csv"
    },
    "transform": [{"filter": {"timeUnit":"year","field":"last_eruption_year","range":[1950,2020]}}],

    "vconcat": [
      {
        "width": 600,
        "height": 500,
        "title": "Volcanos eruptions around the world from 1950 to 2020",
        "projection": {"type": "equalEarth", "rotate": [0, 0, 0]},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "mark": {"type": "geoshape", "fill": "white", "stroke": "lightgray"}
          },
          {
            "transform": [{"filter": {"param": "time_brush"}}],
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "color": {
                "field": "population_within_5_km",
                "title": "population within the impact range (5km)",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                  "domain": [0, 10000, 20000, 30000],
                  "range": ["#ffdd00", "#ffa200", "#ff4400", "#ff0000","#000000"]
                }
              },
              "tooltip": [
                {"field": "last_eruption_year", "type": "temporal","title":"last eruption year","timeUnit":"year"},
                {"field": "population_within_5_km", "type": "quantitative","title":"impact population"},
                {"field": "country", "type": "nominal"},
                {"field": "volcano_name", "type":"nominal","title":"Volcano name"}
              ]
            },
           
            "layer": [
              {"mark": {"type": "circle", "opacity": 0.4, "size": 50}},
              {
                "transform": [
                  {
                    "window": [{"op": "rank", "as": "ranking"}],
                    "sort": [{"field": "population_within_5_km", "order": "descending"}]
                  },
                  {"filter": "datum.ranking == 1"},
                  {
                    "calculate": "'The eruption with largest population in 5km range: ' + datum['population_within_5_km']",
                    "as": "text_annotation"
                  }
                ],
                "encoding": {"text": {"field": "text_annotation"}},
                "layer":
                [
                  {             
                     "mark": {"type": "text", "align": "left", "dx": 20}
                     },
                  {
                    "mark": {"type": "point", "size": 200, "shape": "triangle-up"}
                  }
                  
                  
                ]
              }
            ]
          }
        ]
      },
      {
        "width": 600,
        "height": 30,
        "mark": "line",
        "title": "Count of eruptions each year",
        "params": [
          {
            "name": "time_brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {
            "field": "last_eruption_year",
            "timeUnit": "year",
            "title": "last eruption (year)"
          
            
          },
          "y": {
            "aggregate": "count",
            
            "title": ""
          }
        }
      }
    ],
    "config": {"title": {"font": "sans-serif", "fontSize": 12}}
  }